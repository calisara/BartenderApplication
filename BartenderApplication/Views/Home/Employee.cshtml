@model List<BartenderApplication.Models.TicketsModel>

<div class="container">
        <h2>Tickets</h2>
</div>


<section class="container">

    @if (Model.Count <= 0)
    {
        <div class="alert alert-info" role="alert">
            No tickets found.
        </div>
    }

    @if (Model.Count > 0)
    {
        <table class="table-primary">
            <tr>
                <th>Id</th>
                <th>Customer</th>
                <th>Drink</th>
                
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.Customer</td>
                    <td>@x.Drink</td>
                    
                    <td>
                      <form method="post">
                        <button type="submit" asp-action="Complete" asp-route-id="@x.Id" class="btn btn-secondary" > Complete </button>
                      </form>  
                    </td>
                </tr>
            }
        </table>
    }




</section>